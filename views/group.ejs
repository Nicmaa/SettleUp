<% layout('../layouts/boilerplate.ejs') -%>

<div class="container py-5">
    <!-- Group Header -->
    <div class="text-center mb-5">
        <h2 class="display-5 text-primary mb-3">
            <%= group.title %>
        </h2>
        <p class="lead text-muted">
            <%= group.description %>
        </p>
    </div>

    <!-- Dashboard Section -->
    <div class="row g-4">
        <!-- Main Dashboard Card -->
        <div class="col-md-8">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="card-title m-0">Dashboard Overview</h4>
                        <a href="/<%= group.title %>/newTransaction" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-2"></i>Nuova Transazione
                        </a>
                    </div>
                    
                    <div class="row g-4">
                        <!-- Total Amount Card -->
                        <div class="col-sm-6">
                            <div class="p-4 bg-light rounded-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="text-muted mb-0">Totale Pagato</h5>
                                    <i class="bi bi-cash-stack text-primary fs-4"></i>
                                </div>
                                <h3 class="mt-3 mb-0">€<%= totalPaid.toFixed(2) %></h3>
                            </div>
                        </div>

                        <!-- Highest Payer Card -->
                        <div class="col-sm-6">
                            <div class="p-4 bg-light rounded-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="text-muted mb-0">Top Contributore</h5>
                                    <i class="bi bi-trophy text-warning fs-4"></i>
                                </div>
                                <h3 class="mt-3 mb-0"><%= highestPayingUser.name %></h3>
                                <p class="text-muted mb-0">€<%= highestPayingUser.amount.toFixed(2) %></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Debts Matrix -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h4 class="card-title text-center mb-4">Matrice dei Debiti</h4>
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col">Deve a</th>
                                    <% participants.forEach(p => { %>
                                        <th scope="col" class="text-nowrap"><%= p.name %></th>
                                    <% }) %>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (let p of participants) { %>
                                    <tr>
                                        <td class="text-nowrap"><%= p.name %></td>
                                        <% for (let otherParticipant of participants) { %>
                                            <% if (p.name !== otherParticipant.name) { %>
                                                <% const amount = participantDebts[p.name][otherParticipant.name] %>
                                                <td class="text-nowrap">
                                                    <span class="<%= amount > 0 ? 'text-success' : 'text-danger' %>">
                                                        €<%= amount.toFixed(2) %>
                                                    </span>
                                                </td>
                                            <% } else { %>
                                                <td>-</td>
                                            <% } %>
                                        <% } %>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Transactions History -->
    <div class="mt-5">
        <h4 class="mb-4">Cronologia Transazioni</h4>
        <div class="transaction-timeline">
            <% for (let transaction of transactions) { %>
                <div class="card shadow-sm mb-3 transaction-card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="card-title mb-0">
                                <i class="bi bi-calendar-event me-2"></i>
                                <%= transaction.createdAt.toLocaleDateString('it-IT', { 
                                    weekday: 'long', 
                                    year: 'numeric', 
                                    month: 'long', 
                                    day: 'numeric' 
                                }) %>
                            </h5>
                            <div class="dropdown">
                                <button class="btn btn-light btn-sm" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-three-dots-vertical"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="#">
                                        <i class="bi bi-pencil me-2"></i>Modifica
                                    </a></li>
                                    <li><a class="dropdown-item text-danger" href="#">
                                        <i class="bi bi-trash me-2"></i>Elimina
                                    </a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="row g-3">
                            <% for (let payment of transaction.payments) { %>
                                <div class="col-sm-6 col-md-4">
                                    <div class="p-3 bg-light rounded-3">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="text-muted"><%= payment.name %></span>
                                            <span class="badge bg-primary">€<%= payment.amount.toFixed(2) %></span>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>
