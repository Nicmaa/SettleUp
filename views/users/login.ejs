<% layout('./layouts/layout') -%>

    <div class="row">
        <div class="col-md-6 offset-md-3 my-5">
            <h3 class="text-center mb-5">Login</h3>
            <form class="form-inline validated-form" method="post" action="/api/users/login" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Nome utente:</label>
                    <input type="text" class="form-control" id="username" name="username" required>
                    <div class="valid-feedback">
                        Tutto bene!
                    </div>
                    <div class="invalid-feedback">
                        Perfavore scrivi un nome utente!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password:</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                    <div class="valid-feedback">
                        Tutto bene!
                    </div>
                    <div class="invalid-feedback">
                        Perfavore scrivi una password!
                    </div>
                </div>
                <div class="mb-3">
                    <a href="/api/users/register">Non sei ancora registrato? Clicca qui!</a>
                </div>
                <div class="mt-3 d-flex justify-content-center">
                    <button class="btn btn-success">Entra!</button>
                </div>
            </form>
        </div>
    </div>
