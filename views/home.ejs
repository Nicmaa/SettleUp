<% layout('../layouts/boilerplate.ejs') -%>

<div class="container py-5">
    <div class="carousel-container mt-5">
        <!-- Carousel Navigation - Left -->
        <button 
            class="carousel-nav carousel-prev" 
            aria-label="Previous slide" 
            onclick="moveLeft()"
            title="Previous group"
        >
            <i class="bi bi-chevron-left"></i>
        </button>

        <!-- Carousel Cards -->
        <div class="carousel-wrapper">
            <% groups.forEach((group, index) => { %>
                <div class="carousel-card <%= index === 0 ? 'active' : '' %>">
                    <!-- Card Header with Options -->
                    <div class="card-header">
                        <div class="dropdown">
                            <button 
                                class="btn btn-icon btn-light" 
                                type="button" 
                                id="cardMenu<%= index %>"
                                data-bs-toggle="dropdown" 
                                aria-expanded="false"
                                title="Group options"
                            >
                                <i class="bi bi-three-dots"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="cardMenu<%= index %>">
                                <li>
                                    <a class="dropdown-item d-flex align-items-center" href="/<%= group.title %>/edit">
                                        <i class="bi bi-pencil me-2"></i>Modifica
                                    </a>
                                </li>
                                <li>
                                    <form action="/<%=group._id%>?_method=DELETE" method="post">
                                        <button 
                                            class="dropdown-item text-danger d-flex align-items-center"
                                            type="submit"
                                            onclick="return confirm('Are you sure you want to delete this group?')"
                                        >
                                            <i class="bi bi-trash me-2"></i>Elimina
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <!-- Card Content -->
                    <img 
                        class="card-img" 
                        src="/images/prova.jpg" 
                        alt="Immagine del gruppo <%= group.title %>"
                        loading="lazy"
                    >
                    <div class="card-content text-center p-4">
                        <h3 class="card-title mb-3">
                            <%= group.title %>
                        </h3>
                        <p class="card-description mb-4">
                            <%= group.description %>
                        </p>
                        <a 
                            href="/<%= group.title %>" 
                            class="btn btn-primary stretched-link hover-shadow"
                            id="goinsidebtn"
                        >
                            Go Inside!
                        </a>
                    </div>
                </div>
            <% }); %>
        </div>

        <!-- Carousel Navigation - Right -->
        <button 
            class="carousel-nav carousel-next" 
            aria-label="Next slide" 
            onclick="moveRight()"
            title="Next group"
        >
            <i class="bi bi-chevron-right"></i>
        </button>
    </div>

    <!-- Create New Group Button -->
    <a 
        href="/new" 
        class="btn btn-success btn-lg w-100 mt-4 hover-lift shadow-sm"
        title="Create new group"
    >
        <i class="bi bi-plus-circle me-2"></i>
        Nuovo Gruppo
    </a>
</div>

<script>
    (() => {
        'use strict';

        // State management
        let currentIndex = 0;
        const cards = document.querySelectorAll('.carousel-card');
        const totalCards = cards.length;

        // Update carousel state and apply animations
        const updateCards = () => {
            cards.forEach((card, index) => {
                card.classList.toggle('active', index === currentIndex);
                card.classList.toggle('prev', index < currentIndex);
                card.classList.toggle('next', index > currentIndex);
            });
        };

        // Navigation handlers
        window.moveLeft = () => {
            if (currentIndex > 0) {
                currentIndex--;
                updateCards();
            }
        };

        window.moveRight = () => {
            if (currentIndex < totalCards - 1) {
                currentIndex++;
                updateCards();
            }
        };

        // Keyboard navigation
        document.addEventListener('keydown', (e) => {
            if (e.key === 'ArrowLeft') moveLeft();
            if (e.key === 'ArrowRight') moveRight();
        });

        // Touch navigation
        let touchStartX = 0;
        const carousel = document.querySelector('.carousel-wrapper');

        carousel.addEventListener('touchstart', (e) => {
            touchStartX = e.touches[0].clientX;
        }, false);

        carousel.addEventListener('touchend', (e) => {
            const touchEndX = e.changedTouches[0].clientX;
            const diff = touchStartX - touchEndX;

            if (Math.abs(diff) > 50) { // Minimum swipe distance
                if (diff > 0) {
                    moveRight();
                } else {
                    moveLeft();
                }
            }
        }, false);
    })();
</script>
