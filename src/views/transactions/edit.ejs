<% layout('./layouts/layout') -%>

<div class="row">
    <div class="col-md-6 offset-md-3 my-5">
        <h3 class="text-center mb-5">Modifica Transazione</h3>
        <form class="form-inline validated-form" method="post" action="/transactions/<%= transaction._id %>?_method=PATCH" novalidate>
            <div class="mb-3">
                <label for="description" class="form-label">Descrizione (opzionale)</label>
                <textarea class="form-control" id="description" name="description"><%= transaction.description %></textarea>
            </div>
            <div class="mb-3">
                <label for="category" class="form-label">Categoria</label>
                <select class="form-control" id="category" name="category">
                    <% for(cat of categories) { %>
                        <option value="<%= cat %>" <%= transaction.category === cat ? 'selected' : '' %>><%= cat %></option>
                    <% } %>
                </select>
            </div>
            
            <div class="mb-3">
                <h5 class="mb-3">Partecipanti</h5>
                
                <% if(group.participants && group.participants.length > 0) { %>
                    <div class="card mb-3">
                        <div class="card-header bg-light">Membri del gruppo</div>
                        <div class="card-body p-3">
                            <% for(let p of group.participants) { %>
                                <div class="row mb-2">
                                    <div class="col">
                                        <input type="text" class="form-control" name="user[]" value="<%= p.username %>" readonly>
                                    </div>
                                    <div class="col-4">
                                        <div class="input-group">
                                            <span class="input-group-text">€</span>
                                            <% 
                                                let existingAmount = 0;
                                                const userEntry = transaction.amounts.find(a => a.user === p.username && !a.isInvited);
                                                if (userEntry) {
                                                    existingAmount = userEntry.amount;
                                                }
                                            %>
                                            <input type="number" min="0" step="0.01" class="form-control amount-input" name="amount[]" value="<%= existingAmount %>">
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% } %>
                
                <% if(group.invitedUsers && group.invitedUsers.length > 0) { %>
                    <div class="card">
                        <div class="card-header bg-light">Utenti invitati</div>
                        <div class="card-body p-3">
                            <% for(let i = 0; i < group.invitedUsers.length; i++) { %>
                                <div class="row mb-2">
                                    <div class="col">
                                        <div class="input-group">
                                            <input type="text" class="form-control" name="invitedUsername[]" 
                                                value="<%= group.invitedUsers[i].name %>" readonly>
                                            <span class="input-group-text" title="Utente invitato">
                                                <i class="bi bi-envelope"></i>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="input-group">
                                            <span class="input-group-text">€</span>
                                            <% 
                                                let existingInvitedAmount = 0;
                                                const invitedEntry = transaction.amounts.find(a => a.user === group.invitedUsers[i].name && a.isInvited);
                                                if (invitedEntry) {
                                                    existingInvitedAmount = invitedEntry.amount;
                                                }
                                            %>
                                            <input type="number" min="0" step="0.01" class="form-control amount-input" name="invitedAmount[]" value="<%= existingInvitedAmount %>">
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% } %>
            </div>
            
            <div class="d-flex justify-content-between align-items-center mt-4">
                <div class="fw-bold">Totale: <span id="totalAmount">€0.00</span></div>
            </div>
            
            <div class="d-flex justify-content-between mt-3">
                <a href="/groups/<%= group._id %>" class="btn btn-secondary">Annulla</a>
                <button type="submit" class="btn btn-primary">Aggiorna</button>
            </div>
        </form>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const amountInputs = document.querySelectorAll('.amount-input');
    const totalAmountSpan = document.getElementById('totalAmount');
    
    function calculateTotal() {
        let total = 0;
        amountInputs.forEach(input => {
            const value = parseFloat(input.value) || 0;
            total += value;
        });
        totalAmountSpan.textContent = `€${total.toFixed(2)}`;
        return total;
    }
    
    amountInputs.forEach(input => {
        input.addEventListener('input', calculateTotal);
    });
    
    // Calcola il totale all'avvio
    calculateTotal();
});
</script>
